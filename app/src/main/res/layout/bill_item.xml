<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="13dp"
        android:id="@+id/billid"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/black" />

    <TextView
        android:text="TextView"
        android:layout_width="270sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billid"
        android:layout_alignStart="@+id/billid"
        android:layout_marginTop="11dp"
        android:id="@+id/short_title" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/short_title"
        android:layout_alignStart="@+id/short_title"
        android:layout_marginTop="18dp"
        android:paddingBottom="5sp"
        android:id="@+id/introduced_on" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/right_arrow"
        android:id="@+id/detailsarrow"
        android:layout_alignTop="@+id/billid"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/billid" />
</RelativeLayout>